{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "ANALYZE_BUNDLE",
    "CONTENTFUL_DELIVERY_TOKEN",
    "CONTENTFUL_ENV",
    "CONTENTFUL_PREVIEW_TOKEN",
    "CONTENTFUL_SPACE_ID",
    "CONTENTFUL_USE_PREVIEW",
    "DEFAULT_SITE_ID",
    "DEPLOY_URL",
    "GRAPHQL_SERVER_URL",
    "PAGES_REVALIDATE",
    "PORT",
    "SITE_SETTINGS",
    "SITE",
    "CONTENTFUL_SETTINGS_ID",
    "NEXT_PUBLIC_SENTRY_DSN"
  ],
  "pipeline": {
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "build": {
      "dependsOn": ["^build"],

      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "sync:cms": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "gql:dev": {
      "dependsOn": ["^build", "sync:cms"],
      "cache": false,
      "persistent": true
    },
    "gql:logs": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },

    "graphql-sdk#gql:start": {
      "cache": false,
      "dependsOn": ["graphql-extensions#build", "^build"]
    },
    "graphql-sdk#sync:cms": {
      "cache": false,
      "dependsOn": ["graphql-extensions#build"]
    },
    "web#build": {
      "dependsOn": ["graphql-sdk#sync:cms", "graphql-sdk#gql:start", "^build"],
      "outputs": ["out/**", ".next/**"]
    }
  }
}
