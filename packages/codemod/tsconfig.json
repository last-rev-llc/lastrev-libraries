{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es6", "dom", "es2016", "es2017", "es2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__"]
}
