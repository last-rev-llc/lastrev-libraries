{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "outDir": "dist",
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
