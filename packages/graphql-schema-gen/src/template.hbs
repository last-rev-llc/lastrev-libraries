import { gql } from 'apollo-server';

const contentTypeDefs = gql`
  {{#each items}}
  type {{this.typeName}} implements Content {
    {{#each this.fields}}
    {{this.fieldName}}: {{#if this.isArray}}[{{/if}}{{#each this.types}}{{this}}{{#unless @last}}|{{/unless}}{{/each}}{{#if this.isArray}}]{{/if}}
    {{/each}}
  }
  {{/each}}
`;

export default contentTypeDefs;
