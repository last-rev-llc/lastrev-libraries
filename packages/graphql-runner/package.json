{
  "name": "@ias/graphql-runner",
  "version": "0.1.0",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-s sync:cms gql:dev",
    "gql:start": "last-rev gql-serve -c config",
    "gql:dev": "nodemon -x \"last-rev gql-serve -c config.js\" -w config.js -w cms-sync -w ../graphql-extensions/dist",
    "start": "run-s sync:cms gql:start",
    "sync:cms": "last-rev cms-sync -c config.js"
  },
  "peerDependencies": {},
  "dependencies": {
    "@last-rev/app-config": "^0.1.4",
    "@last-rev/cli": "^0.1.34",
    "@ias/graphql-extensions": "^0.1.0",
    "dotenv": "^10.0.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run test"
    }
  },
  "lint-staged": {
    "packages/*src/**/*.{js,jsx,json,css,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
